<% layout("/layouts/boilerplate") %>

<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h3 class="mt-3">Edit the Listing: </h3>
            <form action="/listings/<%=listing._id%>?_method=PUT" method="POST" novalidate class="needs-validation"  enctype="multipart/form-data">

                <div  class="mb-3 mt-3">
                    <label for="title" class="form-label">Title: </label>
                    <input type="text" name="listing[title]" value=" <%=listing.title%>" id="title" class="form-control">
                </div>
                
                
                <div  class="mb-3">
                    <label for="description" class="form-label">Description: </label>
                    <textarea id="description" class="form-control" type="text" name="listing[description]"> <%=listing.description%></textarea>
                </div>
                
                <div  class="mb-3">
                    Original Listing image: <br>
                    <img src="<%=original_img%>">
                </div>
                
                <div  class="mb-3">
                    <label for="image" class="form-label">Upload New Image: </label>
                    <input id="image" class="form-control" type="file" name="listing[image]" >
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price: </label>
                        <input value= " <%=listing.price%> " type="text" id="price" class="form-control" name="listing[price]" />
            
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country: </label>
                        <input id="country" class="form-control" type="text" name="listing[country]" value=" <%=listing.country%> ">
            
                    </div>
                </div>
                
                <div  class="mb-3">
                    <label for="location" class="form-label">Location: </label>
                    <input id="location" class="form-control" type="text" name="listing[location]" value=" <%=listing.location%> ">      
                </div>
                
                
                <button class="btn btn-dark edit-btn mt-3">Add</button>

            </form>
        </div>
    </div>
    
</body>
